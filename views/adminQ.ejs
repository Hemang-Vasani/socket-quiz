                                            <div class="row">

                                                <div class="col-md-8">

                                                    <div class="row">

                                                        <div class="form-group col-md-4">
                                                            <label for="type">Question Type</label>
                                                            <select id="type" name="type" value="" class="form-control">
                                                                <option value disabled selected> Choose..</option>
                                                                <option>single</option>
                                                                <option>multiple</option>

                                                            </select>
                                                        </div>



